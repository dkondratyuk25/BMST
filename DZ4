#include<stdio.h>
#include<string.h>
#include <stdlib.h>

int main(void)
{
int versh,rebr,cnt,i,j,a,min;
int arr1[20];
char a1,b1;
char arr4[20];
FILE *f;
f=fopen("graph.gv","w");
fputs("graph G {\n",f);

printf("Enter amound of tops:\n");
scanf("%d", &versh);
printf("Enter amound of ribs:\n");
scanf("%d", &rebr);
int arr[versh][versh];

printf("Enter:\n\t0:no rib\n\t1:become a rib\n\n");

for( j=0; j<versh; j++){
    a1='A';
    b1='A';
    a1=a1+j;
for(i=0; i<versh; i++){
    printf("%d top in a %d top: ", j+1,i+1);
    scanf("%d", &a);
    if (a==1){
        arr[j][i]=1;
        fprintf(f,"%c--%c;\n",a1,b1);
}
if (a==0){
	arr[j][i]=0;
}
b1++;
}
}
for( j=0; j<versh; j++){
	a1='A';
	b1='A';
	a1=a1+j;
	cnt=0;
for(i=0; i<versh; i++){

	if (arr[j][i]==0)
			cnt++;
	if (cnt==versh)	{
		fprintf(f,"%c;\n",b1);
					}
b1++;
}
}

printf("\n\tMatrix of adjacency :\n");
for( i=0; i<versh; i++){
printf("\t");
for( j=0; j<versh; j++){
printf("%2d ", arr[j][i]);
}
printf("\n");
}
a1='A';
for(j=0; j<versh; j++){
    cnt=0;
for(i=0; i<versh; i++){
    if (arr[j][i]==1)
    cnt++;
}
    arr1[j]=cnt;
    arr4[j]=a1;
    printf("%d ",cnt);
    printf("(%c), ", arr4[j]);
    a1++;
}
    min=arr1[0];
for(i=0; i<versh; i++){
        if(min>arr1[i])
            min=arr1[i];
}
    printf("\nminimal degree of tops: %d\n",min);
    printf("Tops with min degree of tops\n");
for(i=0; i<versh; i++){
        if (arr1[i]==min)
            printf("%c \n", arr4[i]);
}
fputs("}",f);
fclose(f);
return 0;
}
